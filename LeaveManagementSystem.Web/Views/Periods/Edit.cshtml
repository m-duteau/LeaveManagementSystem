@model Period

@{
    ViewData["Title"] = "Edit";
}

<h1 align="center">Edit</h1>

<h4 align="center">Period</h4>
<hr />
<div align="center">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="width:250px; text-align:center" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Start Date" class="control-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" style="width:250px; text-align:center" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="End Date" class="control-label">End Date</label>
            <input asp-for="EndDate" class="form-control" style="width:250px; text-align:center" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <br />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
<br />
<div align="center">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
